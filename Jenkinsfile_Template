pipeline
{
    agent any
    environment
    {
        VERSION = 'latest'
        PROJECT = 'inv_analysis'
        IMAGE = 'inv_analysis:latest'
        ECRURL = '161789953208.dkr.ecr.us-east-1.amazonaws.com/inv_analysis:latest'
        AWSURL = 'http://161789953208.dkr.ecr.us-east-1.amazonaws.com'
        REPO_URL = 'https://innersource.accenture.com/projects/ATCIMEXR/repos/inventoryanalysispandas_v1.0/'
        ECRCRED = 'ecr:us-east-1:AWS_ATCI'
    }
    stages
    {
        stage("Checkout"){
            steps{
            checkout([$class: 'GitSCM', branches: [[name: 'Develop']], extensions: [], userRemoteConfigs: [[credentialsId: '621b2d88-0c28-4ce2-93e3-997889f14448', url: 'https://innersource.accenture.com/scm/atcimexr/inventoryanalysispandas_v1.0.git']]])
             }
        }
        stage('Build preparations')
        {
            steps
            {
                script
                {
                    // calculate GIT lastest commit short-hash
                    gitCommitHash = sh(returnStdout: true, script: 'git rev-parse HEAD').trim()
                    shortCommitHash = gitCommitHash.take(7)
                    // calculate a sample version tag
                    VERSION = shortCommitHash
                    // set the build display name
                    currentBuild.displayName = "#${BUILD_ID}-${VERSION}"
                    IMAGE = "$PROJECT:$VERSION"
                }
            }
        }


        stage('Docker build')
        {
            steps
            {
                script
                {
                    // Build the docker image using a Dockerfile
                    dockerImage = docker.build env.PROJECT
                }
            }
        }

        stage('Docker Image Tag')
        {
            steps
            {
                script
                {
                    // Tag with the appropriate image name.
                    sh "docker image tag $env.PROJECT $env.ECRURL"

                }
            }
        }

        stage('Docker Push')
        {
            steps
            {
                script{
                    // login to ECR - for now it seems that that the ECR Jenkins plugin is not performing the login as expected. I hope it will in the future.
                    sh("eval \$(aws ecr get-login --no-include-email | sed 's|https://||')")
                    // // Push the Docker image to ECR
                    // sh("docker push $env.ECRURL")
                    docker.withRegistry("$env.AWSURL","$env.ECRCRED"){

                        docker.image("$env.ECRURL").push()

                    }


                }

            }
        }
    }

    post
    {
        always
        {
            // make sure that the Docker image is removed
            sh "docker rmi $env.Project | true"
        }
    }
}